SELECT
   PRJ_ID,
   VORG_ID,
   VORGLS_ID,
   DATUM,
   Sum(MENGE) AS MINUTEN
FROM "DAB020.ADT" DAB020
WHERE
   BUART  = 'L' AND
   PERSNR =  @@PERSNR@@ AND
   DATUM  >= '@@DATE_FROM@@' AND
   DATUM  <= '@@DATE_TO@@'
GROUP BY
   DATUM,
   PRJ_ID,
   VORG_ID,
   VORGLS_ID
ORDER BY
   PRJ_ID,
   VORG_ID,
   VORGLS_ID,
   DATUM
